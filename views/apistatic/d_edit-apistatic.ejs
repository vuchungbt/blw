<!DOCTYPE html>
<html lang="en">

<head>
    <title>API static - kaydadocument</title>
    <%- include ('../include/d_header') %>

</head>

<body class="sb-nav-fixed">
    <%- include ('../include/d_hnav') %>
        <div id="layoutSidenav">
            <%- include ('../include/d_leftnav') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Edit API static</h1>
                            <%- include ('../implement/messages') %>
                            <div class="row">

                                <div class="mem">
                                    <form id="editmember" action="/home/update_resource" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6 ">
                                                <div class="form-group mb-3 mb-md-0 ">
                                                    <label for="recipient-name" class="col-form-label">name:</label>
                                                    <input class="form-control " id="name" name="name" type="text"  value="<%= typeof name != 'undefined' ? name : '' %>" />
                                                    <input   id="id" name="id" type="hidden"  value="<%= typeof _id != 'undefined' ? _id : '' %>" />
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="res_id" class="col-form-label">res_id:</label>
                                                    <input type="res_id" class="form-control" name="res_id" id="res_id" value="<%= typeof res_id != 'undefined' ? res_id : '' %>">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6 ">
                                                <div class="form-group mb-3 mb-md-0 ">
                                                    <label for="link" class="col-form-label">link:</label>
                                                    <input type="text" name="link" class="form-control" id="link" value="<%= typeof link != 'undefined' ? link : '' %>">
                                                </div>
                                            </div>
                                            
                                                <div class="col-md-6 ">
                                                    <div class="form-group mb-3 mb-md-0 ">
                                                        <label for="description" class="col-form-label">description:</label>
                                                        <input type="text" name="description" class="form-control" id="description" value="<%= typeof description != 'undefined' ? description : '' %>">
                                                    </div>
                                                </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="container-fluid px-4">
                                                <div class="d-flex justify-content-end">
                                                    
                                                    <div>
                                                        <a href="../resources" class="btn btn-secondary">Cancel</a>
                                                        <button type="submit" class="btn btn-primary">Save</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include ('../include/footer') %>
                </div>
        </div>
        <%- include ('../include/d_footer') %>
</body>

</html>
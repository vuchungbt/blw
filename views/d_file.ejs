<!DOCTYPE html>
<html lang="en">

<head>
    <title>Documents - kaydadocument</title>
    <%- include ('include/d_header') %>

</head>

<body class="sb-nav-fixed">
    <%- include ('include/d_hnav') %>
        <div id="layoutSidenav">
            <%- include ('include/d_leftnav') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">File</h1>
                            <%- include ('implement/messages') %>
                            <div class="row">
                                <h4>List file in Upload folder</h4>
                                <span><a class="text-dark" href="/home/img"><i class="fas fa-plus-circle"></i> Add photo</a></span></br>
                                <span></span><a class="text-dark" href="#"><i class="fas fa-plus-circle"></i> Add file</a></span>
                                <div class="row pt-2">
                                    <table id="datatablesSimple">
                                        <thead>
                                            <tr>
                                                <th>Link</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            <% if(typeof files != 'undefined'){ %> 
                                                <% files.forEach(function(file) { 
                                                    %> 
                                            <tr>
                                                <td><a href="<%= files.host +'/'+ file %>"><%= file %></a></td>
                                                <td>
                                                    <!--
                                                    <a href="#" class="text-gray px-sm-3" title="copy"><i
                                                            class="fas fa-copy"></i></a>
                                                    <a href="#" class="text-blue px-sm-2"><i
                                                            class="fas fa-edit"></i></a>
                                                            -->
                                                    <a href="/home/removefile/<%= file %>" class="text-danger px-sm-2"><i
                                                            class="fas fa-times"></i></a>
                                                    
                                                    
                                                </td>
                                            </tr>
                                            <% }) %> 
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include ('include/footer') %>
                </div>
        </div>
        <%- include ('include/d_footer') %>
</body>

</html>
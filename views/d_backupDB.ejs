<!DOCTYPE html>
<html lang="en">

<head>
    <title>Backup Database</title>
    <%- include ('include/d_header') %>

</head>

<body class="sb-nav-fixed">
    <%- include ('include/d_hnav') %>
        <div id="layoutSidenav">
            <%- include ('include/d_leftnav') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Backup Database</h1>
                            <%- include ('implement/messages') %>
                            <span>
                                <a class="btn btn-primary mb-4"href="#!"><i class="fas fa-cloud-download-alt"></i></i> Create a point now</a> 
                                <a class="btn btn-secondary mb-4"href="#!"><i class="fas fa-cog"></i></i> </a> 
                                
                            </span>
                            
                            
                                <table id="datatablesSimple" class="" >
                                    <thead>
                                        <tr>
                                            <th>Link</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Link</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                            
                                        <% if(typeof files != 'undefined'){ %> 
                                            <% files.forEach(function(file) { 
                                                %> 
                                        <tr>
                                            <td><a href="<%= files.host +'/'+ file %>"><%= file %></a></td>
                                            <td>
                                                <!--
                                                <a href="#" class="text-gray px-sm-3" title="copy"><i
                                                        class="fas fa-copy"></i></a>
                                                <a href="#" class="text-blue px-sm-2"><i
                                                        class="fas fa-edit"></i></a>
                                                        -->
                                                <a href="/home/removefile/<%= file %>" class="text-danger px-sm-2"><i
                                                        class="fas fa-times"></i></a>
                                                <a href="<%= files.host +'/'+ file %>" download class="text-info px-sm-2"><i    
                                                        class="fas fa-arrow-down"></i></a>
                                                <a href="#" class="text-gray px-sm-3 copy" data-copydata="<%= files.host +'/file/'+ file %>" 
                                                    data-toggle="tooltip" data-placement="top" title="Copy to clipboard"><i
                                                            class="fas fa-copy"></i></a>
                                                
                                                
                                            </td>
                                        </tr>
                                        <% }) %> 
                                        <% } %>
                                    </tbody>
                                </table>
                        
                        </div>
                    </main>
                    <%- include ('include/footer') %>
                </div>
        </div>
        <%- include ('include/d_footer') %>
</body>

</html>
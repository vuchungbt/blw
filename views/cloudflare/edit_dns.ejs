<!DOCTYPE html>
<html lang="en">

<head>
    <title>Cloudflare</title>
    <%- include ('../include/d_header') %>

</head>

<body class="sb-nav-fixed">
    <%- include ('../include/d_hnav') %>
        <div id="layoutSidenav">
            <%- include ('../include/d_leftnav') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h3 class="mt-4">Cloudflare</h3>
                            <%- include ('../implement/messages') %>
                                <div class="row">
                                    <div class="mem">
                                        <form id="addcloudflare" action="/home/update_cloudflare" method="post">
                                            <div class="row mb-3">
                                                <div class="col-md-6 ">
                                                    <div class="form-group">
                                                        <label for="name" class="col-form-label">Name:</label>
                                                        <input class="form-control " id="name" name="name" type="text"
                                                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                                                        <input id="id" name="id" type="hidden"
                                                            value="<%= typeof _id != 'undefined' ? _id : '' %>" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="ZoneID" class="col-form-label">ZoneID:</label>
                                                        <input class="form-control " id="ZoneID" name="ZoneID"
                                                            type="text"
                                                            value="<%= typeof ZoneID != 'undefined' ? ZoneID : '' %>" />

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6 ">

                                                    <div class="form-group">
                                                        <label for="AccountID" class="col-form-label">AccountID:</label>
                                                        <input class="form-control " id="AccountID" name="AccountID"
                                                            type="text"
                                                            value="<%= typeof AccountID != 'undefined' ? AccountID : '' %>" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6">

                                                    <div class="form-group">
                                                        <label for="api_key" class="col-form-label">api_key:</label>
                                                        <input class="form-control " id="api_key" name="api_key"
                                                            type="text"
                                                            value="<%= typeof api_key != 'undefined' ? api_key : '' %>" />

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6 ">

                                                    <div class="form-group">
                                                        <label for="email" class="col-form-label">Email:</label>
                                                        <input class="form-control " id="email" name="email"
                                                            type="text"
                                                            value="<%= typeof email != 'undefined' ? email : '' %>" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6">

                                                    <div class="form-group">
                                                        <label for="description" class="col-form-label">description:</label>
                                                        <input class="form-control " id="description" name="description"
                                                            type="text"
                                                            value="<%= typeof description != 'undefined' ? description : '' %>" />
        
                                                    </div>
                                                </div>
                                            </div>
                                            

                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <hr />
                                <h4>DNS record</h4>
                                <a class="text-dark " data-toggle="modal" data-target="#addrecordDNS" href="#!"><i class="fas fa-plus-circle"></i> Add</a>
                                <%- include ('../implement/addRecordDNS') %>
                                    <table id="datatablesSimple">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Name</th>
                                                <th>Content</th>
                                                <th>Proxy</th>
                                                <th>TTL(1=auto)</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Type</th>
                                                <th>Name</th>
                                                <th>Content</th>
                                                <th>Proxy</th>
                                                <th>TTL(1=auto)</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% if(typeof data_record !='undefined' ){ %>
                                                <% data_record.forEach(function(record) { %>
                                                    <tr>
                                                        <td><%= record.type %></td>
                                                        <td><%= record.name.split('.',1) %></td>
                                                        <td><%= record.content %></td>
                                                        <td class="<%= typeof record.proxied != 'undefined' && record.proxied == false ? 'text-danger' : 'text-info' %>"><%= record.proxied %></td>
                                                        <td><%= record.ttl %></td>
                                                        
                                                        <td>
                                                            <a href="#" title="Edit"
                                                                class="text-blue px-sm-1"><i
                                                                    class="fas fa-edit"></i></a>

                                                                    <a href="../deleterecord?id=<%= typeof _id != 'undefined' ? _id : ''
                                                                     %>&api_key=<%= typeof api_key != 'undefined' ? api_key : '' 
                                                                     %>&idRecord=<%= typeof record.id != 'undefined' ? record.id : '' 
                                                                     %>&ZoneID=<%= typeof ZoneID != 'undefined' ? ZoneID : '' %>" title="Remove"
                                                                class="text-danger px-sm-1"><i
                                                                    class="fas fa-times"></i></a>
                                                        </td>
                                                    </tr>

                                                    <% }) %>
                                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>

                    </main>
                    <%- include ('../include/footer') %>
                </div>
        </div>
        <%- include ('../include/d_footer') %>
</body>

</html>
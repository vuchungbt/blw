    <!-- Modal 1 My profile-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">My profile</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form id="profile">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Fullname:</label>
                        <input type="text" value="<% if(typeof user != 'undefined'){ %><%= user.name %><% } %>" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-phone" class="col-form-label">Phone:</label>
                        <input type="text" value="<% if(typeof user != 'undefined'){ %><%= user.phone %><% } %>" class="form-control" id="recipient-phone">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
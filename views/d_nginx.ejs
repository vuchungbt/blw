<!DOCTYPE html>
<html lang="en">

<head>
    <title>Nginx</title>
    <%- include ('include/d_header') %>

</head>

<body class="sb-nav-fixed">
    <%- include ('include/d_hnav') %>
        <div id="layoutSidenav">
            <%- include ('include/d_leftnav') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Nginx</h1>
                            <%- include ('implement/messages') %>
                            <div class="bd-example">
                                <button type="button" class="btn btn-secondary">Re-open</button>
                                <button type="button" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-success"><i class="fas fa-sync-alt"></i>Reload</button>
                                <button type="button" class="btn btn-danger ml-1" disabled><i class="fas fa-stop-circle"></i> Stop</button>
                            </div>
                            <div class="form-group">
                                <label for="recipient-description" class="col-form-label">Context:</label>
                                <textarea id="description" name="projectdescription" class="textarea_editor form-control" rows="5" placeholder="Updating" ></textarea>
                            </div>
                            <label for="recipient-description" class="col-form-label">Config:</label>
                            <a class="text-dark " data-toggle="modal" data-target="#addRsModal" href="#!"><i class="fas fa-plus-circle"></i> Add</a>
                            <table id="datatablesSimple" class="" >
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% if(typeof lists !='undefined' ){ %>
                                        <% lists.forEach(function(dns) { %>
                                            <tr>
                                                <td>
                                                    <%= dns.name %>
                                                </td>
                                                <td>
                                                    <%= dns.description %>
                                                </td>
                                                <td>
                                                    <a href="/home/update_cloudflare/<%= dns._id %>" title="Edit " class="text-blue px-sm-1"><i class="fas fa-edit"></i></a>
                                                    <a href="/home/delete_cloudflare?id=<%= dns._id %>" title="Delete " class="text-danger px-sm-1"><i class="fas fa-times"></i></a>
                                                </td>
                                            </tr>

                                            <% }) %>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </main>
                    <%- include ('include/footer') %>
                </div>
        </div>
        <%- include ('include/d_footer') %>
</body>

</html>